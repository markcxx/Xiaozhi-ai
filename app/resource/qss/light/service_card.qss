/* 标题样式 */
#titleLabel {
    color: #111827;
    font-weight: 600;
}

/* 描述样式 */
#descriptionLabel {
    color: #6b7280;
}

/* 状态标签样式 */
#statusLabel {
    border-radius: 4px;
    padding: 2px 8px;
}

#statusLabel[statusType="official"] {
    background-color: rgba(59, 130, 246, 26);
    color: #2563eb;
    border: 1px solid rgba(59, 130, 246, 51);
}

#statusLabel[statusType="mark"] {
    background-color: rgba(147, 51, 234, 26);
    color: #7c3aed;
    border: 1px solid rgba(147, 51, 234, 51);
}