/* ServiceCard 浅色主题样式 */

/* 基础卡片样式 */
ServiceCard {
    border: 2px solid #e5e7eb;
    border-radius: 8px;
}

/* 蓝色主题 */
ServiceCard[colorScheme="blue"] {
    border: 2px solid #3b82f6;
}

/* 紫色主题 */
ServiceCard[colorScheme="purple"] {
    border: 2px solid #8b5cf6;
}

/* 绿色主题 */
ServiceCard[colorScheme="green"] {
    border: 2px solid #10b981;
}

/* 橙色主题 */
ServiceCard[colorScheme="orange"] {
    border: 2px solid #f97316;
}

/* 粉色主题 */
ServiceCard[colorScheme="pink"] {
    border: 2px solid #ec4899;
}

/* 靛蓝主题 */
ServiceCard[colorScheme="indigo"] {
    border: 2px solid #6366f1;
}

/* 青绿主题 */
ServiceCard[colorScheme="teal"] {
    border: 2px solid #14b8a6;
}

/* 黄色主题 */
ServiceCard[colorScheme="yellow"] {
    border: 2px solid #eab308;
}

/* 青色主题 */
ServiceCard[colorScheme="cyan"] {
    border: 2px solid #06b6d4;
}

/* 红色主题 */
ServiceCard[colorScheme="red"] {
    border: 2px solid #ef4444;
}

